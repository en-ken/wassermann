<!-- 配列をランダムに並び替えて先頭5つ表示 -->
<div id="characters">
<% @charas.sort_by{rand}[0..2].each do |chara| %>
<%= link_to chara, characters_select_path(:loc_name => @loc_name, :chara => chara), :class => "btn spinner" %>
<% end %>
</div>
